<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <br>
  <div class="container">
    <hr>
    <h1>Perguntas</h1>
    <br>
    <a href="/perguntar" class="btn btn-outline-success"> Perguntar </a>
    <hr> 

    <% perguntas.forEach(pergunta => { %>
        <br>
        <div class="card">
            <div class="card-body">
                <h3><%= pergunta.titulo %></h3> 
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-outline-dark" data-bs-toggle="button" > Responder </button>
                <br>
            </div>
        </div>
    <% }) %>
  </div>
    <hr>
</body>
